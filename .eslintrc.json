{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery"
	],
	"globals": {
		"OO": false,
		"jQuery": false,
		"mediaWiki": false,
		"mw": false
	},
	"rules": {
		"no-unused-vars": "warn",
		"one-var": "warn",
		"vars-on-top": "warn",
		"no-underscore-dangle": "warn",
		"no-undef": "warn",
		"no-shadow-restricted-names": "warn",
		"no-implicit-globals": "warn",
		"no-jquery/no-global-selector": "warn"
	}
}
